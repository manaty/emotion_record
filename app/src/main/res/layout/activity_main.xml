<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:paddingTop="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:background="@color/colorMainBg"
        >

   <org.manaty.octopus.views.StatusButton
           android:id="@+id/view_status_server"
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           app:icon="@drawable/server_on"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toLeftOf="@id/view_status_headset"
   />

   <org.manaty.octopus.views.StatusButton
           android:id="@+id/view_status_headset"
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           app:icon="@drawable/headset_on"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toRightOf="@id/view_status_server"
           app:layout_constraintRight_toRightOf="parent"
   />

   <Button
           android:id="@+id/button_frisson"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Frisson musical"
           android:textColor="@color/colorWhite"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
           android:paddingTop="24dp"
           android:paddingBottom="24dp"
           android:background="@color/colorFrisson"
           android:layout_marginBottom="16dp"
           app:layout_constraintBottom_toTopOf="@id/button_plaisir"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
   />

   <Button
           android:id="@+id/button_plaisir"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Plaisir intense"
           android:textColor="@color/colorWhite"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
           android:paddingTop="24dp"
           android:paddingBottom="24dp"
           android:background="@color/colorPlaisir"
           android:layout_marginBottom="16dp"
           app:layout_constraintBottom_toTopOf="@id/button_faible"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
   />

   <Button
           android:id="@+id/button_faible"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Faible plaisir"
           android:textColor="@color/colorWhite"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
           android:paddingTop="24dp"
           android:paddingBottom="24dp"
           android:background="@color/colorFaible"
           android:layout_marginBottom="16dp"
           app:layout_constraintBottom_toTopOf="@id/button_neutre"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
   />

   <Button
           android:id="@+id/button_neutre"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Neutre"
           android:textColor="@color/colorWhite"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
           android:paddingTop="24dp"
           android:paddingBottom="24dp"
           android:background="@color/colorNeutre"
           android:layout_marginBottom="16dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
   />

   <TextView
           android:id="@+id/textview_session_initial_text"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="@string/main_pre_session_text"
           android:textSize="18sp"
           android:textStyle="bold"
           android:textColor="@color/colorWhite"
           android:gravity="center"
           android:elevation="100dp"
           android:background="@color/colorMainBg"
           android:alpha=".90"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"

   />

</androidx.constraintlayout.widget.ConstraintLayout>